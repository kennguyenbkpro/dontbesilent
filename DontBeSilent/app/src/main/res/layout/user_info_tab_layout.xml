<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/cover_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp" >
        <ImageView
            android:id="@+id/cover_img"
            android:src="@drawable/host_banner"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dip"
            android:layout_marginBottom="4dip"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#AA000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:text="Giọt máu cứu người"/>
        <ImageView

            android:src="@drawable/checked"
            android:layout_toRightOf="@id/name_tv"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dip"
            android:layout_marginBottom="4dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:scaleType="centerCrop"
            android:layout_above="@id/name_tv"
            android:src="@drawable/host_avatar"
            android:layout_marginLeft="4dip"
            android:layout_marginBottom="4dip"
            android:layout_alignParentLeft="true"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:text="Edit"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/round_btn_white_grey"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="4dip"
            android:layout_marginBottom="4dip"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:gravity="center"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Young volunteers from VNG company devoted 24h to tackle on critical problem. They are really passionated by..."
                android:textSize="18sp"
                android:padding="10dip"
                android:minLines="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DD121212"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                />
            <Button
                android:text="Option"
                android:textAllCaps="false"
                android:gravity="left|center_vertical"
                android:background="#00FFFFFF"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DD121212"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                />
            <Button
                android:text="User Detail"
                android:drawableRight="@drawable/right_arrow"
                android:textAllCaps="false"
                android:gravity="left|center_vertical"
                android:background="#00FFFFFF"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DD121212"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                />
            <Button
                android:text="User's Campaigns"
                android:drawableRight="@drawable/right_arrow"
                android:textAllCaps="false"
                android:gravity="left|center_vertical"
                android:background="#00FFFFFF"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DD121212"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                />
            <Button
                android:text="Bookmarks"
                android:drawableRight="@drawable/right_arrow"
                android:textAllCaps="false"
                android:gravity="left|center_vertical"
                android:background="#00FFFFFF"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DD121212"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>