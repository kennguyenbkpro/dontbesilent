<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/cover_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp" >
            <ImageView
                android:id="@+id/cover_img"
                android:src="#FFFFFF"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/name_tv"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="7dip"
                android:layout_marginBottom="4dip"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowRadius="10"
                android:shadowColor="#AA000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:text="Giọt máu cứu người"/>
            <ImageView
                android:id="@+id/verify_ic"
                android:src="@drawable/checked"
                android:layout_toRightOf="@id/name_tv"
                android:layout_alignParentBottom="true"
                android:layout_alignTop="@id/name_tv"
                android:layout_alignBottom="@id/name_tv"
                android:layout_marginLeft="7dip"
                android:layout_width="18dp"
                android:layout_height="18dp" />

            <FrameLayout
                android:layout_marginLeft="7dip"
                android:layout_marginBottom="4dip"
                android:layout_alignParentLeft="true"
                android:layout_above="@id/name_tv"
                android:padding="4dip"
                android:background="#3ba7d6"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/avatar_img"
                    android:scaleType="centerCrop"
                    android:src="#EFEFEF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </FrameLayout>

            <Button
                android:visibility="gone"
                android:text="Edit"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:drawableRight="@drawable/ic_mode_edit_black_18dp"
                android:paddingRight="4dip"
                android:background="@drawable/round_btn_white_grey"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="4dip"
                android:layout_marginBottom="4dip"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:gravity="center"
                />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/description_tv"
                    android:text="Young volunteers from VNG company devoted 24h to tackle on critical problem. They are really passionated by..."
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:padding="10dip"
                    android:minLines="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#AA343434"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    />
                <Button
                    android:text="Option"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:gravity="left|center_vertical"
                    android:background="#00FFFFFF"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#AA343434"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    />
                <Button
                    android:text="User Detail"
                    android:textSize="16sp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:textAllCaps="false"
                    android:gravity="left|center_vertical"
                    android:background="#00FFFFFF"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#AA343434"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    />
                <Button
                    android:id="@+id/user_campaign"
                    android:textSize="16sp"
                    android:text="User's Campaigns"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:textAllCaps="false"
                    android:gravity="left|center_vertical"
                    android:background="#00FFFFFF"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#AA343434"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    />
                <Button
                    android:id="@+id/bookmark"
                    android:text="Bookmarks"
                    android:textSize="16sp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:textAllCaps="false"
                    android:gravity="left|center_vertical"
                    android:background="#00FFFFFF"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#AA343434"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    />
            </LinearLayout>
        </ScrollView>



    </LinearLayout>
</FrameLayout>
