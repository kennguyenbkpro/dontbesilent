<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_followers"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="@string/title_followers"/>
        <TextView
            android:id="@+id/tv_followers_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="12dp"
            android:text="385"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_donation"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="@string/title_donation"/>

        <ProgressBar
            android:id="@+id/item_campaign_progress"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:indeterminate="false"
            android:progress="30"
            android:max="100"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <TextView
            android:id="@+id/tv_donation_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:textSize="12dp"
            android:textColor="@color/text_color_blue"
            android:text="65%"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_valid_time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="@string/title_valid_time"/>
        <TextView
            android:id="@+id/tv_valid_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="12dp"
            android:text="24 days"/>
    </LinearLayout>
</LinearLayout>